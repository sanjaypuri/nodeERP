<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mas Group - Companies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
      .alertDiv {
        font-size: 1.25rem;
        color: black;
        border-width: 3px;
        border-style: solid;
        border-radius: 25px;
        position: absolute;
        top: 10px;
        right: 10px;
        width: 300px;
        text-align: center;
        display: none;
        padding: 10px 5px;
      }
    </style>
  </head>
  <body class="bg-dark text-light">
    <%- include('navbar') %>
    <div id="alertDiv" class="alertDiv"></div>
    <div class="text-center fs-3">Available Companies</div>
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th>Company</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% companies.map((company)=>{ %>
              <tr>
                <td><%= company.company %></td>
                <td>
                  <a href="/companyedit/<%= company.id %>"><span class="material-symbols-outlined">edit</span></a>
                  <a href="/companydelete/<%= company.id %>"><span class="material-symbols-outlined">delete</span></a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="col">
        <a href="/companyadd"><button class="btn btn-primary">New Company</button></a>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      const popMsg = "<%= popMsg %>";
      const border = "<%= border %>";

      function showAlert(msg, color, duration){
        const alertDiv = document.getElementById('alertDiv')
        alertDiv.innerText = msg;
        alertDiv.style.borderColor = color;
        if(color == 'red'){
          alertDiv.style.backgroundColor = 'pink';
        }
        if(color == 'green'){
          alertDiv.style.backgroundColor = 'palegreen';
        }
        if(color == 'blue'){
          alertDiv.style.backgroundColor = 'powderblue';
        }
        alertDiv.style.display = 'block';
        setTimeout(() => {
          alertDiv.style.display = 'none';
        }, duration*1000);
      };

      if(popMsg != 'noMsg'){
        showAlert(popMsg, border, 2);
      }

    </script>
  </body>
</html>