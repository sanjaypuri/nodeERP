<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mas Group - Update Company</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-dark text-light">
    <%- include('navbar') %>
    <div class="text-center fs-3">Update Company</div>
    <form action="/companyedit" method="post">
      <div class="row mt-3">
        <div class="col offset-4">Name</div>
      </div>
      <div class="row">
        <div class="col offset-4">
          <input type="text" class="form-control d-none" id="id" name="id" value="<%= company.id %>">
          <input type="text" class="form-control w-50" id="company" name="company" required value="<%= company.company %>">
        </div>
      </div>
      <div class="row mt-3">
        <div class="col offset-4">
          <button class="btn btn-primary w-50" type="submit">Save</button>
        </div>
      </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>